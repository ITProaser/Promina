{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "no-async-without-await": true,
        "curly": [
            true,
            "ignore-same-line"
        ],
        "triple-equals": true,
        "prefer-const": true,
        "ordered-imports": true,
        "no-trailing-whitespace": true,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "semicolon": [
            true,
            "always"
        ]
    },
    "rulesDirectory": []
}